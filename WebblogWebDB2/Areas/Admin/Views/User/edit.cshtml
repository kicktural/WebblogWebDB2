@model User
@inject Microsoft.AspNetCore.Identity.UserManager<User> userManager

<dl>
    <dt>@Model.FirstName</dt>
    <dt>@Model.LastName</dt>
    <dt>@Model.Email</dt>
</dl>


<table class="table table-dark">
    <thead>
        <tr>
            <th>#</th>
            <th>Role</th>
            <th>#</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in await userManager.GetRolesAsync(Model))
        {
            <tr>
                <td>@item</td>
                <td>
                    <a asp-area="Admin" asp-controller="User" asp-action="Delete"
                      asp-route-Userid="@Model.Id" asp-route-roles="@Model.Id" class="btn btn-info">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>